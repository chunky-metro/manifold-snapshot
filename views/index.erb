<% if @error %>
  <div class="error">
    <%= @error %>
  </div>
<% end %>

<h1>Manifold Snapshot Generator</h1>

<form action="/generate" method="post">
  <div class="form-group">
    <label for="contract_address">Contract Address:</label>
    <input type="text" id="contract_address" name="contract_address" required>
  </div>

  <div class="form-group">
    <label for="token_number">Token Number:</label>
    <input type="number" id="token_number" name="token_number" required>
  </div>

  <button type="submit">Generate Spreadsheet</button>
</form>
